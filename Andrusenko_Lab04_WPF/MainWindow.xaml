        xmlns:viewmodels="clr-namespace:Andrusenko_Lab04_WPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:PersonTableViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1300">
    <Grid>
        <DataGrid ItemsSource="{Binding Path=List}" SelectedIndex="{Binding SelectedRow}" Margin="0,61,493,64" SelectionMode="Single"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="934,205,0,0" VerticalAlignment="Top" Command="{Binding CommandSave}"/>
